<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PillsmasterClient.Views.RegistrationPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Регистрация">
    <ContentPage.Content>
        <StackLayout Padding="30" VerticalOptions="Center">
            <Label Text="E-mail:" />
            <Entry Placeholder="email@email.com" />
            <Label Text="Пароль:" />
            <Entry IsPassword="True" Placeholder="пароль" />
            <Label Text="Подтвердите пароль:" />
            <Entry IsPassword="True" Placeholder="подтвердите пароль" />
            <Label Text="Имя:" />
            <Entry Placeholder="Имя" />
            <Label Text="Фамилия:" />
            <Entry Placeholder="Фамилия" />
            <Button Text="Зарегистрироваться" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>